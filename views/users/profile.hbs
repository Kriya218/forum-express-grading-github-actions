{{!-- profile --}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{#if user.image}}{{user.image}}{{else}}https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ12lYNi9ON02p9zySLVYzHFAkvMdJtDiT2oA&s{{/if}}" class="rounded-start square-img" alt="user-profile-photo">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text">已評論餐廳: {{comments.count}}</p>
        {{#ifCond user.id userId }}
          <form action="/users/{{user.id}}/edit" method="get">
            <button type="submit" class="btn btn-primary">Edit</button>
          </form>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>
{{!-- comments --}}
<div class="card">
  <div class="card-header">
    已評論餐廳: {{comments.count}}
  </div>
  <div class="card-body d-flex flex-wrap mx-auto">
    {{#each comments.rows}}
        <a href="/restaurants/{{this.restaurantId}}" class="card-link ms-0 mx-2" style="width: 9%;">
          <img src="{{../user.Comments.Restaurant.image}}" class="square-img my-1" alt="restaurant-image">
        </a>
    {{/each}}
  </div>
</div>